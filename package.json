  "volta": {
    "node": "16.17.1",
    "npm": "8.19.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.1.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "sinon": "^14.0.1"
